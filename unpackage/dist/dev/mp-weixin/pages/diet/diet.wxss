.diet-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.diet-container .stat-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.diet-container .stat-card .stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.diet-container .stat-card .stat-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.diet-container .stat-card .stat-header .date {
  font-size: 28rpx;
  color: #999;
}
.diet-container .stat-card .stat-content .stat-item {
  text-align: center;
  margin-bottom: 30rpx;
}
.diet-container .stat-card .stat-content .stat-item .label {
  font-size: 28rpx;
  color: #666;
}
.diet-container .stat-card .stat-content .stat-item .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin: 0 10rpx;
}
.diet-container .stat-card .stat-content .stat-item .unit {
  font-size: 24rpx;
  color: #999;
}
.diet-container .stat-card .stat-content .nutrition-bar {
  height: 40rpx;
  display: flex;
  border-radius: 20rpx;
  overflow: hidden;
}
.diet-container .stat-card .stat-content .nutrition-bar .bar-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width 0.3s;
}
.diet-container .stat-card .stat-content .nutrition-bar .bar-item text {
  font-size: 24rpx;
  color: #fff;
}
.diet-container .stat-card .stat-content .nutrition-bar .bar-item.protein {
  background-color: #ff6b6b;
}
.diet-container .stat-card .stat-content .nutrition-bar .bar-item.fat {
  background-color: #ffd93d;
}
.diet-container .stat-card .stat-content .nutrition-bar .bar-item.carbs {
  background-color: #6c5ce7;
}
.diet-container .meal-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.diet-container .meal-buttons .meal-btn {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.diet-container .meal-buttons .meal-btn .meal-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.diet-container .meal-buttons .meal-btn .meal-status {
  font-size: 24rpx;
  color: #999;
}
.diet-container .meal-buttons .meal-btn:active {
  background-color: #f5f5f5;
}
.diet-container .diet-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.diet-container .diet-list .list-header {
  margin-bottom: 20rpx;
}
.diet-container .diet-list .list-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.diet-container .diet-list .meal-group {
  margin-bottom: 30rpx;
}
.diet-container .diet-list .meal-group .meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.diet-container .diet-list .meal-group .meal-header .meal-type {
  font-size: 28rpx;
  color: #666;
}
.diet-container .diet-list .meal-group .meal-header .meal-calories {
  font-size: 28rpx;
  color: #ff6b6b;
}
.diet-container .diet-list .meal-group .food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.diet-container .diet-list .meal-group .food-item .food-info .food-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}
.diet-container .diet-list .meal-group .food-item .food-info .food-weight {
  font-size: 24rpx;
  color: #999;
}
.diet-container .diet-list .meal-group .food-item .food-nutrition .calories {
  font-size: 28rpx;
  color: #ff6b6b;
}
.add-form {
  background-color: #fff;
  min-height: 60vh;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}
.add-form .form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.add-form .form-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.add-form .form-header .close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}
.add-form .search-box {
  margin-bottom: 20rpx;
}
.add-form .search-box .search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.add-form .food-list {
  max-height: 400rpx;
}
.add-form .food-list .food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.add-form .food-list .food-item:active {
  background-color: #f5f5f5;
}
.add-form .food-list .food-item .name {
  font-size: 28rpx;
  color: #333;
}
.add-form .food-list .food-item .calories {
  font-size: 24rpx;
  color: #999;
}
.add-form .selected-food {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.add-form .selected-food .food-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.add-form .selected-food .food-info .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.add-form .selected-food .food-info .unit {
  font-size: 24rpx;
  color: #999;
}
.add-form .selected-food .nutrition-info {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.add-form .selected-food .nutrition-info text {
  font-size: 24rpx;
  color: #666;
}
.add-form .selected-food .weight-input {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.add-form .selected-food .weight-input .label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}
.add-form .selected-food .weight-input .input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.add-form .selected-food .calculated-nutrition {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.add-form .selected-food .calculated-nutrition text {
  font-size: 24rpx;
  color: #666;
}
.add-form .selected-food .calculated-nutrition text:first-child {
  color: #333;
  font-weight: bold;
}
.add-form .submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.add-form .submit-btn:disabled {
  background-color: #ccc;
}
.no-result {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

