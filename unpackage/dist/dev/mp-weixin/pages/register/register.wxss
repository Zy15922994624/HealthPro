.register-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.register-container .top-bg {
  height: 250rpx;
  background: linear-gradient(180deg, #1aa7e3 0%, #1aa7e3 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.register-container .register-box {
  position: relative;
  margin: -80rpx 40rpx 0;
  padding: 60rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}
.register-container .register-box .title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.register-container .register-box .subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}
.register-container .register-box .input-box {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-radius: 40rpx;
}
.register-container .register-box .input-box .uni-icons {
  margin-right: 20rpx;
}
.register-container .register-box .input-box .uni-easyinput {
  flex: 1;
}
.register-container .register-box .register-btn {
  height: 90rpx;
  line-height: 90rpx;
  background: #1aa7e3;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin: 60rpx 0;
}
.register-container .register-box .login-link {
  text-align: center;
  font-size: 26rpx;
  color: #666;
}
.register-container .register-box .login-link .link {
  color: #1aa7e3;
  margin-left: 10rpx;
}
:deep(.uni-easyinput__content) {
  border: none !important;
  background-color: transparent !important;
}

