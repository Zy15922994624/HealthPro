.sport-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.sport-container .stat-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.sport-container .stat-card .stat-item {
  text-align: center;
  flex: 1;
  position: relative;
}
.sport-container .stat-card .stat-item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 1px;
  height: 60%;
  background-color: #eee;
}
.sport-container .stat-card .stat-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}
.sport-container .stat-card .stat-item .value {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  display: block;
}
.sport-container .sport-list {
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.sport-container .sport-list .sport-item {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.sport-container .sport-list .sport-item:active {
  background-color: #f9f9f9;
}
.sport-container .sport-list .sport-item .sport-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.sport-container .sport-list .sport-item .sport-info .sport-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.sport-container .sport-list .sport-item .sport-info .sport-time {
  font-size: 24rpx;
  color: #999;
}
.sport-container .sport-list .sport-item .sport-data {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sport-container .sport-list .sport-item .sport-data text {
  font-size: 28rpx;
  color: #666;
}
.sport-container .sport-list .empty {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
.sport-container .start-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
}
.sport-status {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.sport-status .timer {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.sport-status .sport-type {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}
.sport-status .stop-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}
.start-form {
  background-color: #fff;
  min-height: 60vh;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.start-form .sport-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}
.start-form .sport-list .sport-item {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.start-form .sport-list .sport-item:active {
  background-color: #e0e0e0;
}
