}
.end-form .form-content .form-item .intensity-group {
  display: flex;
  flex-wrap: wrap;
  gap: 40rpx;
  padding: 20rpx 0;
}
.end-form .form-content .form-item .intensity-group .intensity-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.end-form .form-content .form-item .intensity-group .intensity-item radio {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.end-form .form-content .form-item .intensity-group .intensity-item text {
  font-size: 28rpx;
}
.end-form .form-content .submit-btn {
