.goals-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.goals-container .settings-group {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}
.goals-container .settings-group .group-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.goals-container .settings-group .settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.goals-container .settings-group .settings-item:last-child {
  border-bottom: none;
}
.goals-container .settings-group .settings-item .label-wrap {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.goals-container .settings-group .settings-item .label-wrap .label {
  font-size: 28rpx;
  color: #333;
}
.goals-container .settings-group .settings-item input {
  text-align: right;
  width: 200rpx;
}
.goals-container .settings-group .settings-item picker {
  color: #666;
}
.goals-container .reminder-btn {
  margin: 0;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
}
.goals-container .reminder-btn.active {
  color: #fff;
  background: #07c160;
  border-color: #07c160;
}
.goals-container .reminder-btn::after {
  border: none;
}
.goals-container .save-btn {
  margin-top: 40rpx;
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
}
.goals-container .save-btn[loading] {
  opacity: 0.7;
}

