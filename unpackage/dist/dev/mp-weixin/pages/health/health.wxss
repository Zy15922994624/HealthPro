.health-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}
.health-container .data-cards {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.health-container .data-cards .card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.health-container .data-cards .card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.health-container .data-cards .card .card-header .title {
  font-size: 28rpx;
  color: #333;
}
.health-container .data-cards .card .card-header .value {
  font-size: 36rpx;
  font-weight: bold;
}
.health-container .data-cards .card .card-header .value.normal {
  color: #07c160;
}
.health-container .data-cards .card .card-header .value.high {
  color: #ff5151;
}
.health-container .data-cards .card .card-header .value.low {
  color: #ffa600;
}
.health-container .data-cards .card .card-body {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}
.health-container .data-cards .card .card-body .status {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}
.health-container .data-cards .card .card-footer .reference {
  font-size: 22rpx;
  color: #999;
  display: block;
}
.health-container .advice-section {
  margin: 0;
  padding: 0;
  width: 100%;
  box-sizing: border-box;
}
.health-container .advice-section .advice-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}
.health-container .advice-section .advice-card .advice-header {
  margin-bottom: 16rpx;
}
.health-container .advice-section .advice-card .advice-header .advice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.health-container .advice-section .advice-card .encourage-content {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.health-container .advice-section .advice-card .encourage-content .encourage-item {
  margin-bottom: 10rpx;
}
.health-container .advice-section .advice-card .encourage-content .encourage-item .normal-text {
  font-size: 26rpx;
  color: #07c160;
  line-height: 1.6;
  display: block;
}
.health-container .advice-section .advice-card .encourage-content .encourage-item:last-child {
  margin-bottom: 0;
}
.health-container .advice-section .advice-card .advice-content .advice-item {
  margin-bottom: 16rpx;
}
.health-container .advice-section .advice-card .advice-content .advice-item .reason {
  font-size: 26rpx;
  color: #ff5151;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}
.health-container .advice-section .advice-card .advice-content .advice-item .advice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}
.health-container .advice-section .advice-card .advice-content:last-child {
  margin-bottom: 0;
}
.health-container .record-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  margin: 40rpx auto;
  font-size: 32rpx;
}
.health-container .form-content {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}
.health-container .form-content .form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.health-container .form-content .form-header .title {
  font-size: 32rpx;
  font-weight: bold;
}
.health-container .form-content .form-header .close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}
.health-container .form-content .form-body {
  max-height: 60vh;
  overflow-y: auto;
}
.health-container .form-content .form-footer {
  padding: 30rpx 0;
}
.health-container .form-content .form-footer .submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

