.container {
  padding: 30rpx;
  background-color: #f5f5f5;
}
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.card .card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.card .card-header .more {
  font-size: 28rpx;
  color: #999;
}
.diet-card .meal-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.diet-card .meal-buttons .meal-btn {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}
.diet-card .meal-buttons .meal-btn .meal-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.diet-card .meal-buttons .meal-btn .meal-status {
  font-size: 24rpx;
  color: #999;
}
.diet-card .nutrition-info {
  display: flex;
  justify-content: space-between;
}
.diet-card .nutrition-info .nutrition-item {
  text-align: center;
}
.diet-card .nutrition-info .nutrition-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}
.diet-card .nutrition-info .nutrition-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.diet-card .nutrition-info .nutrition-item .unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}
.health-card .health-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.health-card .health-grid .health-item {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}
.health-card .health-grid .health-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.health-card .health-grid .health-item .value-wrap .value {
  font-size: 32rpx;
  font-weight: bold;
}
.health-card .health-grid .health-item .value-wrap .value.normal {
  color: #07c160;
}
.health-card .health-grid .health-item .value-wrap .value.high {
  color: #ff5151;
}
.health-card .health-grid .health-item .value-wrap .value.low {
  color: #ffa600;
}
.health-card .health-grid .health-item .value-wrap .status {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}
.health-card .record-info {
  text-align: center;
  padding: 20rpx 0;
}
.health-card .record-info .record-time {
  font-size: 26rpx;
  color: #999;
}
.add-form {
  position: relative;
  z-index: 999 !important;
  background-color: #fff;
  min-height: 60vh;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}
.add-form .form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.add-form .form-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.add-form .form-header .close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}
.add-form .search-box {
  margin-bottom: 20rpx;
}
.add-form .search-box .search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.add-form .food-list {
  max-height: 400rpx;
}
.add-form .food-list .food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.add-form .food-list .food-item:active {
  background-color: #f5f5f5;
}
.add-form .food-list .food-item .name {
  font-size: 28rpx;
  color: #333;
}
.add-form .food-list .food-item .calories {
  font-size: 24rpx;
  color: #999;
}
.add-form .selected-food {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.add-form .selected-food .food-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.add-form .selected-food .food-info .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.add-form .selected-food .food-info .unit {
  font-size: 24rpx;
  color: #999;
}
.add-form .selected-food .nutrition-info {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.add-form .selected-food .nutrition-info text {
  font-size: 24rpx;
  color: #666;
}
.add-form .selected-food .weight-input {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.add-form .selected-food .weight-input .label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}
.add-form .selected-food .weight-input .input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.add-form .selected-food .calculated-nutrition {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.add-form .selected-food .calculated-nutrition text {
  font-size: 24rpx;
  color: #666;
}
.add-form .selected-food .calculated-nutrition text:first-child {
  color: #333;
  font-weight: bold;
}
.add-form .submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.add-form .submit-btn:disabled {
  background-color: #ccc;
}
.no-result {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
.trend-card {
  position: relative;
  z-index: 1;
}
.trend-card .indicator-tabs {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx 0;
}
.trend-card .indicator-tabs .tab-item {
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
  border-radius: 24rpx;
}
.trend-card .indicator-tabs .tab-item.active {
  color: #1aa7e3;
  background: rgba(26, 167, 227, 0.1);
  font-weight: 500;
}
.trend-card .charts-swiper {
  height: 480rpx;
  width: 100%;
  position: relative;
  z-index: 1;
}
.trend-card .charts-swiper .uni-swiper-wrapper {
  overflow: hidden;
}
.trend-card .charts-swiper .uni-swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100% !important;
}
.trend-card .charts-swiper .uni-swiper-item .chart-container {
  width: 100%;
  height: 100%;
}
.uni-popup {
  z-index: 999 !important;
}

